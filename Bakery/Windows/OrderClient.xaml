<Window x:Class="Bakery.Windows.OrderClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bakery.Windows"
        mc:Ignorable="d"
        Loaded="Page_Loaded"
        WindowStartupLocation="CenterScreen"
        Title="Basket" Height="800" Width="1200">


    <Window.Resources>
        <ResourceDictionary Source="/Dictionaries/ProdListDic.xaml"/>
    </Window.Resources>
    


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Border Width="400"
                Margin="0,10,0,0"
                HorizontalAlignment="Center">
            <Border.BorderBrush>
                <SolidColorBrush Color="White" Opacity="0.9"/>
            </Border.BorderBrush>
            <Border.Effect>
                <DropShadowEffect BlurRadius="20"/>
            </Border.Effect>
            <TextBlock Text="Заказ"
                   FontSize="50"
                   FontWeight="Black"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="10"/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>



        <ListView Grid.Row="2"
                  Margin="10,10,10,10"
                  x:Name="LvProductOrder"
                  ItemsSource="{Binding ProdList}" d:ItemsSource="{d:SampleData ItemCount=5}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource ItemBorder}"
                            
                            Margin="10">
                        <StackPanel Orientation="Vertical">
                            <Image Width="230"
                                   Height="180"
                                   Margin="0 10 0 0"
                                   Source="{Binding Product.Image}">
                            </Image>
                            <!--<TextBlock Style="{StaticResource ItemText}"
                                       Text="{Binding Order.IdOrder, StringFormat=Заказ: {0}}"/>-->
                            <TextBlock Style="{StaticResource ItemText}"
                                       Text="{Binding Product.ProdName}"/>
                          

                            <WrapPanel>

                                <TextBlock Style="{StaticResource ItemText}"
                                       Text="Количество:"/>

                                <TextBlock Style="{StaticResource ItemText}"
                                       Text="{Binding Quantity}"/>
                            </WrapPanel>
                            <TextBlock Style="{StaticResource ItemText}"
                                       Text="{Binding Product.Cost, StringFormat=Цена: {0}}"/>


                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
        <Button Width="250"
                Content="Вернуться назад"
                FontSize="22"
                Grid.Row="3"
                HorizontalAlignment="Right"
                Click="Back_Click"
                Height="40"
                VerticalAlignment="Top"/>
    </Grid>
</Window>
